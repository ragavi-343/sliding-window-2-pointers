class Solution {
    public int numberOfSubstrings(String s) {
        Map <Character,Integer>map=new HashMap<>();
        int l=0,c=0;
        for(int r=0;r<s.length();r++)
        {
           int curr= map.getOrDefault(s.charAt(r),0);
           map.put(s.charAt(r),curr+1);
           while(map.size()==3)
           {
              int cl=map.get(s.charAt(l));
              map.put(s.charAt(l),cl-1);
              if(map.get(s.charAt(l))==0)
              {
                map.remove(s.charAt(l));
              }
              l++;
           }
           c+=l;
        } 
        return c;
    }
}
